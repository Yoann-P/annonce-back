{% extends 'base.html.twig' %}


{% block body %}
	<div class="container my-5">
		<h1>{{ brand.name }}</h1>


		<p>Cette page vous renseigne sur tous nos v√©hicules de la marque
			<strong>{{ brand.name }}</strong>
			({{brand.models|length}})
		</p>
		<div class="row">

			{%for model  in brand.models%}
				<div class="col-md-12 mt-3">
